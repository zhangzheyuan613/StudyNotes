class Parenthesis {
public:
    bool chkParenthesis(string A, int n) {
        // write code here
        int l=0;//左括号数
        for(int i=0;i<n;i++)
        {
            if(A[i]=='(')
            {
                l++;
            }
            else if(A[i]==')')
            {
                if(l>0)
                {
                    l--;
                }
                else
                {
                    return false;
                }
            }
            else
            {
                return false;
            }
        }
        return l==0;
    }
};
